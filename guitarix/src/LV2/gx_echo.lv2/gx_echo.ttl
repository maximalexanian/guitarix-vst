@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix guiext: <http://lv2plug.in/ns/extensions/ui#>.
@prefix units: <http://lv2plug.in/ns/extensions/units#> .
@prefix time: <http://lv2plug.in/ns/ext/time#>.

<http://guitarix.sourceforge.net#me>
	a foaf:Person ;
	foaf:name "Guitarix team" ;
	foaf:mbox <mailto:brummer@web.de> ;
	rdfs:seeAlso <http://guitarix.sourceforge.net> .

<http://guitarix.sourceforge.net/plugins/gx_echo_stereo>
	a doap:Project ;
	doap:maintainer <http://guitarix.sourceforge.net#me> ;
	doap:name "Gx_echo_stereo" .

<http://guitarix.sourceforge.net/plugins/gx_echo_stereo#_echo_stereo>
    a lv2:Plugin ,
        lv2:DelayPlugin ;
    doap:maintainer <http://guitarix.sourceforge.net#me> ;
    doap:name "GxEcho-Stereo";
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <http://guitarix.sourceforge.net/plugins/gx_echo_stereo> ;
    lv2:optionalFeature lv2:hardRTCapable ;
    
  guiext:ui <http://guitarix.sourceforge.net/plugins/gx_echo_stereo#gui>;
  
    lv2:minorVersion 34;
    lv2:microVersion 0;
    
rdfs:comment """

A stereo echo plugin with independent delay time and delay volume for each channel. It also has a LFO modulator and two modes: linear and pingpong.

*Unofficial documentation

""";

    lv2:port [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "mode" ;
        lv2:name "Mode";
        lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:scalePoint [rdfs:label "linear"; rdf:value 0];
        lv2:scalePoint [rdfs:label "pingpong"; rdf:value 1];
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "level_r" ;
        lv2:name "R Level";
        lv2:default 30.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 100.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "timt_r" ;
        lv2:name "R Time";
        lv2:default 100.0 ;
        lv2:minimum 1.0 ;
        lv2:maximum 2000.0 ;
        units:unit units:ms ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "level_l" ;
        lv2:name "L Level";
        lv2:default 30.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 100.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 4 ;
        lv2:symbol "timt_l" ;
        lv2:name "L Time";
        lv2:default 100.0 ;
        lv2:minimum 1.0 ;
        lv2:maximum 2000.0 ;
        units:unit units:ms ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 5 ;
        lv2:symbol "lfo" ;
        lv2:name "LFO";
        lv2:default 0.2 ;
        lv2:minimum 0.2 ;
        lv2:maximum 5.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 6 ;
        lv2:symbol "link" ;
        lv2:name "Link (L+R)";
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 7 ;
        lv2:symbol "out" ;
        lv2:name "Out"
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 8 ;
        lv2:symbol "out1" ;
        lv2:name "Out1"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 9 ;
        lv2:symbol "in" ;
        lv2:name "In" ;
    ], [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 10 ;
        lv2:symbol "in1" ;
        lv2:name "In1" ;
    ] .


<http://guitarix.sourceforge.net/plugins/gx_echo_stereo#gui>
  a guiext:GtkUI;
  guiext:binary <gx_echo_gui.so>;
  guiext:requiredFeature guiext:makeResident .
  
