@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix guiext: <http://lv2plug.in/ns/extensions/ui#>.
@prefix time: <http://lv2plug.in/ns/ext/time#>.
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<http://guitarix.sourceforge.net#me>
	a foaf:Person ;
	foaf:name "Guitarix team" ;
	foaf:mbox <mailto:brummer@web.de> ;
	rdfs:seeAlso <http://guitarix.sourceforge.net> .

<http://guitarix.sourceforge.net/plugins/gx_tremolo>
	a doap:Project ;
	doap:maintainer <http://guitarix.sourceforge.net#me> ;
	doap:name "Gx_tremolo" .

<http://guitarix.sourceforge.net/plugins/gx_tremolo#_tremolo>
    a lv2:Plugin ,
        lv2:ModulatorPlugin ;
    doap:maintainer <http://guitarix.sourceforge.net#me> ;
    doap:name "GxTremolo";
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <http://guitarix.sourceforge.net/plugins/gx_tremolo> ;
    lv2:optionalFeature lv2:hardRTCapable ;
    
  guiext:ui <http://guitarix.sourceforge.net/plugins/gx_tremolo#gui>;
  
    lv2:minorVersion 34;
    lv2:microVersion 0;
    
rdfs:comment """

Model of a vactrol tremolo unit by "transmogrify"
** c.f. http://sourceforge.net/apps/phpbb/guitarix/viewtopic.php?f=7&t=44&p=233&hilit=transmogrifox#p233
** http://transmogrifox.webs.com/vactrol.m

*Unofficial documentation

""";

    lv2:port  [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "dry_wet" ;
        lv2:name "Dry/Wet";
        lv2:default 50.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 100.0 ;
    ] ,[
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "mode" ;
        lv2:name "Mode";
        lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:scalePoint [rdfs:label "triangle"; rdf:value 0];
        lv2:scalePoint [rdfs:label "sine"; rdf:value 1];
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "depth" ;
        lv2:name "Depth";
        lv2:default 0.5 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "freq" ;
        lv2:name "Freq";
        lv2:default 5.0 ;
        lv2:minimum 0.1 ;
        lv2:maximum 50.0 ;
        units:unit units:hz ;
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 4 ;
        lv2:symbol "out" ;
        lv2:name "Out" ;
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 5 ;
        lv2:symbol "in" ;
        lv2:name "In" ;
    ] .

<http://guitarix.sourceforge.net/plugins/gx_tremolo#gui>
  a guiext:GtkUI;
  guiext:binary <gx_tremolo_gui.so>;
  guiext:requiredFeature guiext:makeResident .
