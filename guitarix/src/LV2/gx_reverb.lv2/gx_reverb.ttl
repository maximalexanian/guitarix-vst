@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix guiext: <http://lv2plug.in/ns/extensions/ui#>.

<http://guitarix.sourceforge.net#me>
	a foaf:Person ;
	foaf:name "Guitarix team" ;
	foaf:mbox <mailto:brummer@web.de> ;
	rdfs:seeAlso <http://guitarix.sourceforge.net> .

<http://guitarix.sourceforge.net/plugins/gx_reverb_stereo>
	a doap:Project ;
	doap:maintainer <http://guitarix.sourceforge.net#me> ;
	doap:name "Gx_reverb_stereo" .

<http://guitarix.sourceforge.net/plugins/gx_reverb_stereo#_reverb_stereo>
    a lv2:Plugin ,
        lv2:ReverbPlugin ;
    doap:maintainer <http://guitarix.sourceforge.net#me> ;
    doap:name "GxReverb-Stereo";
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <http://guitarix.sourceforge.net/plugins/gx_reverb_stereo> ;
    lv2:optionalFeature lv2:hardRTCapable ;
    
  guiext:ui <http://guitarix.sourceforge.net/plugins/gx_reverb_stereo#gui>;
  
    lv2:minorVersion 34;
    lv2:microVersion 0;
    
rdfs:comment """

"A Reverb simulates the component of sound that results from reflections from surrounding walls or objects. It is in effect a room simulator. Some people think it's just a delay effect with some filters, but it's way more complex than that."

*Unofficial documentation

source: http://audacity.sourceforge.net/manual-1.2/effects_reverb.html

""";

    lv2:port  [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "dry_wet" ;
        lv2:name "Dry/Wet";
        lv2:default 50.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 100.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "lfo" ;
        lv2:name "LFO";
        lv2:default 0.2 ;
        lv2:minimum 0.2 ;
        lv2:maximum 5.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "roomsize" ;
        lv2:name "Roomsize";
        lv2:default 0.5 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "damp" ;
        lv2:name "Damp";
        lv2:default 0.2 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] ,[
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 4 ;
        lv2:symbol "mode" ;
        lv2:name "Mode";
        lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:scalePoint [rdfs:label "linear"; rdf:value 0];
        lv2:scalePoint [rdfs:label "pingpong"; rdf:value 1];
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 5 ;
        lv2:symbol "out" ;
        lv2:name "Out"
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 6 ;
        lv2:symbol "out1" ;
        lv2:name "Out1"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 7 ;
        lv2:symbol "in" ;
        lv2:name "In" ;
    ], [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 8 ;
        lv2:symbol "in1" ;
        lv2:name "In1" ;
    ] .

<http://guitarix.sourceforge.net/plugins/gx_reverb_stereo#gui>
  a guiext:GtkUI;
  guiext:binary <gx_reverb_gui.so>;
  guiext:requiredFeature guiext:makeResident .
